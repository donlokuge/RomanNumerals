{
    "compilerOptions": {
        "rootDir": "./src",
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "noEmitOnError": true,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
